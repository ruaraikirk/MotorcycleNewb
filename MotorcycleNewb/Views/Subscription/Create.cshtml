@model MotorcycleNewb.Models.Subscription

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2 class="col-md-offset-4">Subscribe to our monthly newsletter!</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-offset-3" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-5" })
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-md-offset-5" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5" })
            <div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger col-md-offset-5" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-xs-offset-6">
                <input type="submit" value="Create" class="btn btn-default" onclick="javascript: return SubmitForm();" />
            </div>
        </div>
    </div>
    <script>
        function SubmitForm() {
            var r = confirm("Are you sure you want to submit?");
            if (r == false) {
                return false;
            }
        }
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
