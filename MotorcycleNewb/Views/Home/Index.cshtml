@{
    ViewBag.Title = "Home Page";
}

<div id="homeCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#homeCarousel" data-slide-to="1"></li>
        <li data-target="#homeCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/motorcycle_solo.jpg" alt="Biker Buddie">
            <div class="carousel-caption" style="background-color: black; opacity: 0.7">
                <h1>Get Started!</h1>
                <p>MotorcycleNewb is your one-stop-shop for hitting the road in Ireland</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/motorcycle_group.jpg" alt="Chicago">
            <div class="carousel-caption" style="background-color: black; opacity: 0.7">
                <h1>Forum</h1>
                <p>Discuss and share your experience with other newbs</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/biker_buddy.jpg" alt="New York">
            <div class="carousel-caption" style="background-color: black; opacity: 0.7">
                <h1>Meet Other Newbs</h1>
                <p>Find other newbie motorcyclists and share your passion</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#homeCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#homeCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
